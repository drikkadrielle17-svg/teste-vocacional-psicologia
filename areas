// ======== ESTADO ========
let idx = 0;
const answers = {};

// ======== DOM ========
const qText = document.getElementById('qText');
const optionsDiv = document.getElementById('options');
const progressText = document.getElementById('progressText');
const percentText = document.getElementById('percentText');
const bar = document.getElementById('bar');
const prevBtn = document.getElementById('prevBtn');
const nextBtn = document.getElementById('nextBtn');
const skipBtn = document.getElementById('skipBtn');
const partialBtn = document.getElementById('partialBtn');
const questionCard = document.getElementById('questionCard');
const resultSec = document.getElementById('result');
const answeredN = document.getElementById('answeredN');
const coveredN = document.getElementById('coveredN');
const topList = document.getElementById('topList');
const topExplain = document.getElementById('topExplain');
const restartBtn = document.getElementById('restartBtn');
const printBtn = document.getElementById('printBtn');
const downloadBtn = document.getElementById('downloadBtn');

function render(){
  const item = Q[idx];
  qText.textContent = item.q;
  optionsDiv.innerHTML = '';
  item.a.forEach((row, i) => {
    const [text, area] = row;
    const id = `opt_${idx}_${i}`;
    const label = document.createElement('label');
    label.className = 'opt';
    label.setAttribute('for', id);
    const input = document.createElement('input');
    input.type = 'radio'; input.name = 'opt'; input.id = id; input.value = area;
    input.checked = answers[idx] === area;
    input.addEventListener('change', () => { answers[idx] = area; });
    const span = document.createElement('div'); span.textContent = text;
    label.appendChild(input); label.appendChild(span);
    optionsDiv.appendChild(label);
  });
  const pct = Math.round(((idx+1)/Q.length)*100);
  progressText.textContent = `Pergunta ${idx+1} de ${Q.length}`;
  percentText.textContent = `${pct}%`;
  bar.style.width = pct + '%';
  prevBtn.disabled = idx === 0;
  nextBtn.textContent = idx === Q.length-1 ? 'Finalizar' : 'Pr√≥xima';
}

function next(){ if(idx < Q.length-1){ idx++; render(); } else { finish(); } }
function prev(){ if(idx>0){ idx--; render(); } }
function skip(){ if(idx < Q.length-1){ idx++; render(); } else { finish(); } }

function finish(){
  const tally = {};
  Object.keys(AREAS).forEach(k => tally[k]=0);
  Object.values(answers).forEach(area => { if(area && tally[area]!=null) tally[area]++; });
  const pairs = Object.entries(tally).sort((a,b)=> b[1]-a[1]);
  const top3 = pairs.slice(0,3);
  questionCard.style.display = 'none';
  document.getElementById('quiz').style.display = 'none';
  resultSec.style.display = 'block';
  const answered = Object.keys(answers).length;
  answeredN.textContent = answered;
  const covered = Object.values(answers).reduce((set, a)=>{ if(a) set.add(a); return set; }, new Set()).size;
  coveredN.textContent = covered;
  topList.innerHTML='';
  top3.forEach(([key,score], i)=>{
    const li = document.createElement('li');
    li.style.marginBottom='8px';
    li.innerHTML = `<span class="badge">${i+1}¬∫ ‚Äî ${AREAS[key].nome}</span> &nbsp; <small style="color:var(--muted)">pontos: ${score}</small><br><span style="color:var(--muted)">${AREAS[key].desc}</span>`;
    topList.appendChild(li);
  });
  topExplain.innerHTML = `
    <div class="questionCard" style="margin-top:8px">
      <strong>Como interpretar:</strong>
      <ul style="margin:6px 0 0 18px;color:var(--muted)">
        <li>Este √© um <em>instrumento ilustrativo</em>. Use os resultados como ponto de partida para explorar √°reas de interesse.</li>
        <li>Busque disciplinas optativas, est√°gios e leituras nas √°reas apontadas.</li>
        <li>Para uma orienta√ß√£o formal, procure um(a) psic√≥logo(a) habilitado(a).</li>
      </ul>
    </div>`;
}

function restart(){ Object.keys(answers).forEach(k=> delete answers[k]); idx = 0; document.getElementById('quiz').style.display = 'block'; questionCard.style.display = 'block'; resultSec.style.display = 'none'; render(); }

function downloadSelf(){ const blob = new Blob([document.documentElement.outerHTML], {type:'text/html'}); const a = document.createElement('a'); a.href = URL.createObjectURL(blob); a.download = 'teste_vocacional_psicologia.html'; a.click(); setTimeout(()=>URL.revokeObjectURL(a.href), 1000); }

prevBtn.addEventListener('click', prev);
nextBtn.addEventListener('click', next);
skipBtn.addEventListener('click', skip);
partialBtn.addEventListener('click', finish);
restartBtn.addEventListener('click', restart);
printBtn.addEventListener('click', () => window.print());
downloadBtn.addEventListener('click', downloadSelf);

render();
</script>
