    function showResult() {
      let form = document.getElementById('quizForm');
      let answers = new FormData(form);
      let scores = {
        clinica: 0,
        organizacional: 0,
        escolar: 0,
        hospitalar: 0,
        social: 0,
        juridica: 0,
        neuro: 0,
        esporte: 0
      };

      for (let value of answers.values()) {
        scores[value]++;
      }

      let topArea = Object.keys(scores).reduce((a, b) => scores[a] > scores[b] ? a : b);

      let descriptions = {
        clinica: "üõãÔ∏è <b>Psicologia Cl√≠nica</b>: Voc√™ tem interesse em compreender profundamente o ser humano, ouvir hist√≥rias, acolher e promover autoconhecimento. Pode atuar em consult√≥rios, cl√≠nicas e institui√ß√µes.",
